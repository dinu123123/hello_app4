<%= form_with(model: driver, local: true) do |form| %>
  <% if driver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(driver.errors.count, "error") %> prohibited this driver from being saved:</h2>

      <ul>
      <% driver.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :active, 'Mark if active'  %>
    <%= form.check_box :active, id: :active%>
  </div>

  <div class="field">
    <%= form.label :CNP %>
    <%= form.text_field :CNP, id: :driver_CNP, :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :FIRSTNAME %>
    <%= form.text_field :FIRSTNAME, id: :driver_FIRSTNAME, :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :SECONDNAME %>
    <%= form.text_field :SECONDNAME, id: :driver_SECONDNAME, :required => 'required' %>
  </div>

  <% if current_user != nil and (current_user.admin == true or current_user.email.eql?  "ameropa.logistics@gmail.com") %> 
      <div class="field">
        <%= form.label :INFO, 'Salary', :required => 'required' %>
        <%= form.text_field :INFO, id: :driver_INFO, :required => 'required' %>
      </div>
  <% end %> 

  <div class="field">
    <%= form.label :DESCRIPTION %>
    <%= form.text_area :DESCRIPTION, id: :driver_DESCRIPTION %>
  </div>

  <div class="field">
    <%= form.label :StartDate, 'Employment Date' %>
    <%= form.date_select :StartDate, id: :driver_StartDate, :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :EndDate, 'Termination Date' %>
    <%= form.date_select :EndDate, id: :driver_EndDate %>
  </div>

  <div class="form_group">
    <%= form.label :name, 'You can introduce multiple pdf/jpg files at once.' %>
    <%= form.file_field :images, multiple: true %>
  </div>
  
  <br></br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
