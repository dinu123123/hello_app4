<!DOCTYPE html>
<html>
<head>
</head>
<body>
  <p id="notice"><%= notice %></p>
 

  <table>
    <h1>Driver Events</h1>
    <thead>
      <tr>
        <th>Date</th>
        <th>Driver CNP</th>
        <th>First Name</th>
        <th>Second Name</th>
        <th>Client Name</th>
        <th>Number Plate</th>
        <th>Start/End</th>
        <th colspan="3"></th>
      </tr>
    </thead>
<tbody>    
    <% @events.each do |event| %>
    <tr>
      <td><%= event.DATE.strftime("%d %B %Y") %></td>
      <td><%= @drivers.find(event.DRIVER_id).CNP %></td>
      <td><%= @drivers.find(event.DRIVER_id).FIRSTNAME %></td>
      <td><%= @drivers.find(event.DRIVER_id).SECONDNAME %></td>
      <td><%= @clients.find(event.client_id).Name %></td>
      <td><%= @trucks.find(event.truck_id).NB_PLATE %></td>
      
      <% if event.START_END? %>
      <td><%= 'Start' %></td>
      <% else %>
      <td><%= 'End' %></td>
      <% end %>

      <td><%= link_to 'Show', event %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<br>
</body>
</html>

