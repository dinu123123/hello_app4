<p id="notice"><%= notice %></p>
<h1>Conversions</h1>

<p>

<%= link_to 'New Conversion', new_conversion_path %>

<p>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Conversion rate</th>
      <th>Currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conversions.each do |conversion| %>
      <tr>
        <td><%= conversion.date %></td>
        <td><%= conversion.conversion_rate %></td>
        <td><%= conversion.currency_id %></td>
        <td><%= link_to 'Show', conversion %></td>
        <td><%= link_to 'Edit', edit_conversion_path(conversion) %></td>
        <td><%= link_to 'Destroy', conversion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

