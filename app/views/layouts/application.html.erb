  <%= link_to "Group", mission1_url %>
  <%= link_to "Individual", mission_url %>
  <%= link_to "OilPrice", oil_url %>
  
  <%= link_to "File", db_url %>
<% end %>
   <%= link_to "Help", help_url %>
</div>  


<p id="notice"><%= notice %></p>



    <%= yield %>
  </body>
</html>

