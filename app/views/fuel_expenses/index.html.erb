<!DOCTYPE html>
<html>
<head>
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 80%;
}

td, th {
    border: 1px solid #aaaaaa;
    text-align: left;
    padding: 1px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>
</head>
<body>

<p id="notice"><%= notice %></p>

<h1>Fuel Expenses</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>TrsTime</th>
      <th>TrsDate</th>
      <th>Product</th>
      <th>Volume</th>
      <th>EuroNetAmount</th>
      <th>KmInsertion</th>
      <th>PlateNr</th>
      <th>TruckID</th>
      <th>CardNr</th>
      <th>StatioNname</th>
      <th>GrossUnitPrice</th>
      <th>GrossAmount</th>
      <th>Country</th>
       <th>DateTime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fuel_expenses.each_with_index do |fuel_expense, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= fuel_expense.trstime.strftime("%H:%M") %></td>
        <td><%= fuel_expense.trsdate %></td>
        <td><%= fuel_expense.product %></td>
        <td><%= fuel_expense.volume %></td>
        <td><%= fuel_expense.eurnetamount %></td>
        <td><%= fuel_expense.kminsertion %></td>
        <td><%= fuel_expense.platenr %></td>
        <td><%= fuel_expense.truck_id %></td>
        <td><%= fuel_expense.cardnr %></td>
        <td><%= fuel_expense.stationname %></td>
        <td><%= fuel_expense.eurgrossunitprice %></td>
        <td><%= fuel_expense.eurgrossamount %></td>
        <td><%= fuel_expense.country %></td>
        <td><%= fuel_expense.datetime %></td>
        <td><%= link_to 'Show', fuel_expense %></td>
        <td><%= link_to 'Edit', edit_fuel_expense_path(fuel_expense) %></td>
        <td><%= link_to 'Destroy', fuel_expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
<h4> Import that data!</h4>
  <%= form_tag import_fuel_expenses_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag  "Import CSV"%>
<% end %>
</div>

<%= link_to 'New Fuel Expense', new_fuel_expense_path %>
