
<%= simple_form_for(@card) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <%= f.label :provider %>
    <%= f.select :provider, options_for_select(['DKV','AS24','IDS']), { prompt: "Card Provider"}, :required => 'required' %>
  </div>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :card_id %>
    <%= f.input :pin %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
