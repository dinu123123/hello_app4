  <div class="field">
    <%= form.label :country %>
    <%= form.select :country, options_for_select(['CH', 'IT', 'AT','FR','HU','RO','CZ','SK','BE','DK','ES','PT','SE']), { prompt: "Country Select"}, :required => 'required' %>
