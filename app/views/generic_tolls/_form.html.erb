    <%= form.label :Km %>
    <%= form.text_field :Km, id: :generic_toll_Km, :required => 'required' %>
  </div>

  <div class="field">
    <%= form.label :EUR %>
    <%= form.text_field :EUR, id: :generic_toll_EUR, :required => 'required' %>
  </div>

 <%if false%>
